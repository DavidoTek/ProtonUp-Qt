<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>net.davidotek.pupgui2</id>
  
  <name>ProtonUp-Qt</name>
  <summary>Install Wine- and Proton-based compatibility tools</summary>

  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0</project_license>
  
  <description>
    <p>
      Install and manage Proton-GE and Luxtorpeda for Steam and Wine-GE for Lutris with this graphical user interface. Partly based on AUNaseef&apos;s ProtonUp, made with Python 3 and Qt 6.
    </p>
  </description>
  
  <launchable type="desktop-id">net.davidotek.pupgui2.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <image>https://davidotek.github.io/protonup-qt/images/screenshot143_dark1.png</image>
    </screenshot>
    <screenshot>
      <image>https://davidotek.github.io/protonup-qt/images/screenshot143_light1.png</image>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.0" />

  <releases>
    <release version="2.3.2" date="2021-12-2">
      <description>
        <p>Add Flatpak as official install method</p>
      </description>
    </release>
    <release version="2.3.1" date="2021-12-01">
      <description>
        <p>Changes:</p>
        <ul>
          <li>Support different Steam install directory: ~/.local/share/Steam</li>
        </ul>
      </description>
    </release>
    <release version="2.3.0" date="2021-11-17">
      <description>
        <p>Changes:</p>
        <ul>
          <li>Added Boxtron and Roberta support</li>
          <li>Show compatibility tool info and games when double-clicking tool in list</li>
        </ul>
      </description>
    </release>
  </releases>

  <developer_name>DavidoTek</developer_name>
  <url type="homepage">https://davidotek.github.io/protonup-qt/</url>
  <url type="bugtracker">https://github.com/DavidoTek/ProtonUp-Qt/issues</url>
  <url type="donation">https://ko-fi.com/davidotek</url>
</component>
